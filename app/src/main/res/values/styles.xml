<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
                <item name="buttonStyle">@style/calculatorButton</item>
    </style>
<style name="calculatorButton" parent="Widget.AppCompat.Button.Borderless" >
    <item name="android:background">@color/gray</item>
    <item name="android:layout_width">82dp</item>
    <item name ="android:layout_height">110dp</item>
    <item name="android:textSize">30sp</item>

</style>
    <style name="calculatorOperations" parent="Widget.AppCompat.Button.Borderless" >
        <item name="android:background">@color/gray</item>
        <item name="android:layout_width">82dp</item>
        <item name ="android:layout_height">88dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/azure</item>

    </style>
    <style name="calculatorVerticalLinearLayout" >
        <item name="android:layout_width">82dp</item>
        <item name="android:layout_height">440dp</item>
        <item name="android:background">@color/brightGray</item>
        <item name="android:padding">1dip</item>
    </style>
    <style name="calculatorHorizontalLinearLayout" >
        <item name="android:layout_width">246dp</item>
        <item name="android:layout_height">110dp</item>

    </style>

</resources>
